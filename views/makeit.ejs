<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <link rel="stylesheet" href="/assets/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <script src='https://kit.fontawesome.com/a076d05399.js'></script>
  <script src="http://code.jquery.com/jquery-1.11.3.min.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js" integrity="sha256-T0Vest3yCU7pafRw9r+settMBX6JkKN06dqBnpQ8d30=" crossorigin="anonymous"></script>
  <script src="/assets/time_table.js">

  </script>
  <title>Create a time table</title>
</head>̥

<body>
  <div class="container-fluid  bg-warning border">
    <form>
      <div class="form-group row mx-3 ">
        <label for="serialNumber" class="col-sm-2 mt-3 col-form-label text-monospace h5">Enter Serial Number</label>
        <div class="col-sm-10 mt-3">
          <input type="number" class="form-control" id="sno" placeholder="Enter Serial Number">
        </div>
      </div>
      <div class="form-group row mx-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label text-monospace h5">Enter Start time in the format(hh:mm)</label>
        <div class="col-sm-10 mt-3">
          <input type="text" class="form-control" id="inpTimestart" placeholder="Enter time">
        </div>
      </div>
      <div class="form-group row mx-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label text-monospace h5">Enter End time in the format(hh:mm)</label>
        <div class="col-sm-10 mt-3">
          <input type="text" class="form-control" id="inpTimeend" placeholder="Enter time">
        </div>
      </div>
      <div class="form-group row mx-3">
        <label for="inputPassword3" class="col-sm-2 col-form-label text-monospace h5">Description of the event</label>
        <div class="col-sm-10 mt-3">
          <textarea type="text" class="form-control" id="inpDesc" placeholder="Description" style="resize:none"></textarea>
        </div>
      </div>
      <div class="justify-content-end d-flex mr-5" id="addItem">
        <button class="btn btn-primary btn-lg active mb-3 text-monospace" id="addbutton">Add Item</button>
      </div>

    </form>
  </div>

  <div class="container-fluid mt-5">
    <div class="row" id="addedItems">
      <% for(var i = 0 ;i<details.length;i++){ %>
      <span class="text-monospace"><%= details[i].tid %>.
        <%= details[i].st %> -
        <%= details[i].et%> :
        <%= details[i].desc%>
        <i class="fas fa-times clickIcon"></i>
      </span>
      <% } %>
    </div>
  </div>


  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <!-- <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script> -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

</body>
